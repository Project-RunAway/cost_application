    <Button
        android:id="@+id/regTomain_button"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:text="Menu"
        android:textSize="28sp"
        android:fontFamily="cursive"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:background="@drawable/button_custum"
        app:layout_constraintTop_toBottomOf="@+id/register_remark_text"
        app:layout_constraintEnd_toStartOf="@+id/done_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="50dp"
        android:text="Done"
        android:textSize="28sp"
        android:fontFamily="cursive"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:background="@drawable/button_custum"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_remark"
        app:layout_constraintStart_toEndOf="@+id/regTomain_button"
        app:layout_constraintEnd_toEndOf="parent"/>


